<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Assignment7_Peary</title>
</head>
<body>
	<h1>Simple Sign-up Page</h1>
<div>
	Username:
	<input id="name_name" type="text" name="name" size="20"> 
	<span style="color:red" id="name"></span>
</div>

 <br />
<div>
	Password:
	<input id="name_password" type="password"  size="20">
	<span style="color:red" id="password"></span>
</div>
<br>
<div>
	Password Confrimation:
	<input id="name_confirm" type="password"  size="20">
	<span style="color:red" id="confirm"></span>
</div>
<br>
<div>
	E-mail:
	<input id="name_email" type="text" size="20" >
	<span style="color:red" id="email"></span>
</div>

<script
  src="https://code.jquery.com/jquery-3.2.1.slim.js"
  integrity="sha256-tA8y0XqiwnpwmOIl3SGAcFl2RvxHjA8qp0+1uCGmRmg="
  crossorigin="anonymous"></script>

<script>
	$(document).ready(function(){
	var minLength = 8;
		$("#name_name").on("keydown keyup change", function(){
	var valueUsername = $(this).val();
		if (valueUsername.length < minLength){
			$("#name").html("Should greater than 8 characters");
		} 
	else{
		$("#name").text("");
		} 
	}); 
	$("#name_password").on("keydown keyup change", function(){
	var valuePassword = $(this).val();
		if(valuePassword.length < minLength){
			$("#password").html("Should greater than 8 characters");
		}
		else{
		$("#password").text("");
		}
	});
	$("#name_confirm").on("keydown keyup change", function(){
	var password = $("#name_password").val();
	if($(this).val() == password ){
		$("#confirm").text("Password Confirm!");
	}
	else{
		$("#confirm").text("Pasword is not Confirm!");
	}
	}); 
	$("#name_email").on("keydown keyup change", function() {
	var reg = /^[_a-z0-9-]+(\.[_a-z0-9-]+)*@ [a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,4})$/;
	if(reg.test($(this).val())){
		$("#email").text("Correct email");
	}
	else{
		$("#email").text("Incorrect Email");
	}
	}); 
	});
</script>



</body>
</html>