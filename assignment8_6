 <script>
 	$(document).ready(function(){
$("#showMouse").mouseover(function(){
$("a").html("Mouse over");
});
$("#showMouse").mouseout(function(){
$("a").html("Mouse out");
});
$("#showMouse").mouseup(function(){
$("a").html("Mouse up");
});
$("#showMouse").mousedown(function(){
$("a").html("Mouseo down");
});
$("#showMouse").dblclick(function(){
$("a").html("Double Click");
});
});
</script>


