		 $("#button-change").click(function(){
   		 $("#p3").addClass("yellow");
   		 });
   		 $("#button-hello").click(function(){
   		 	// html 1 time  append <p>text</p> many time
   		 $("#hello").html("Hello World"); 
   		}); 
   		 $("#button-show").click(function(){
       	 $("#p2").toggle();
   		});
   		 
   		 });
   		    		     
        </script>
