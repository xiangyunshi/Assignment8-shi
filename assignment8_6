	<script>
		$(document).ready(function(){
		   $("#width").html($(window).innerWidth() + 'px');
		   $("#height").html( $(window).innerHeight() + 'px');
		   $(window).resize(function(){
		   		$("#width").html($(window).innerWidth());
		   		$("#height").html($(window).innerHeight());
	       });
		  // $(location).attr('href');
		  $("#location").html( $(location).attr('href'));
		  $("#button-reload").click(function(){
        	location.reload();
       	  });
        });
	
	</script>
	<script>
		$(document).ready(function(){
		 // $("#button-reload").click(function(){
